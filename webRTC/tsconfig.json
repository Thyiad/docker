{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": "./src/",
    "outDir": "./dist/",
  }
}
